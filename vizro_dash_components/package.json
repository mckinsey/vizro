{
  "name": "vizro_dash_components",
  "version": "0.0.1",
  "description": "Custom Dash components for Vizro with enhanced Markdown rendering",
  "main": "index.ts",
  "scripts": {
    "build:js::dev": "webpack --mode development",
    "build:js": "webpack",
    "build:backends": "dash-generate-components ./src/ts/components vizro_dash_components -p package-info.json  --ignore \\.test\\.",
    "build": "npm run build:js && npm run build:backends",
    "watch": "npm run build:js::dev -- --watch",
    "dist": "python -m build --sdist --wheel --outdir dist/",
    "lint:js": "npx @biomejs/biome check src/",
    "fmt:js": "npx @biomejs/biome check --write src/"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@types/ramda": "^0.30.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "css-loader": "^6.10.0",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react": "18.2.0",
    "react-docgen": "^5.4.3",
    "react-dom": "18.2.0",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.3.1",
    "typescript": "^5.6.3",
    "webpack": "^5.101.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@mantine/code-highlight": "^7.0.0",
    "@mantine/core": "^7.0.0",
    "@mantine/hooks": "^7.0.0",
    "highlight.js": "^11.9.0",
    "mathjax": "^3.2.2",
    "prop-types": "^15.8.1",
    "ramda": "^0.30.0",
    "react-jsx-parser": "^2.4.1",
    "react-markdown": "^4.3.1",
    "remark-math": "^3.0.1"
  },
  "peerDependencies": {
    "react": "16 - 19",
    "react-dom": "16 - 19"
  },
  "author": "Vizro Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mckinsey/vizro.git"
  }
}
